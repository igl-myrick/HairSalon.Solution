@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<p><strong>Note:</strong>You need to have added at least one stylist to the listing before you can add a client.</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>

<h4>Add a new client to @Html.DisplayFor(model => model.Stylist.Name)</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client">
}

<p>@Html.ActionLink("See all clients", "Index")</p>